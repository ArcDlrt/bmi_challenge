.row
  .col-md-offset-3.col-md-6.text-center
    %h2 Log in
.row
  .col-md-8.col-md-offset-2
    .row
      = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f|
        = devise_error_messages!
        .form-group
          = f.label :email, class: 'col-md-4'
          = f.email_field :email, class: 'col-md-8'

        .form-group
          = f.label :password, class: 'col-md-4'
          = f.password_field :password, class: 'col-md-8'

        .form-group
          .col-md-offset-2.col-md-8.text-center
            = f.submit 'Log in', class: 'btn btn-primary btn-lg'