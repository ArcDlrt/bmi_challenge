.row
  .col-md-offset-3.col-md-6.text-center
    %h2 Register
.row
  .col-md-8.col-md-offset-2
    .row
      = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f|
        = devise_error_messages!
        .form-group
          = f.label :email, class: 'col-md-4'
          = f.email_field :email, class: 'col-md-8', autofocus: true

        .form-group
          = f.label :username, class: 'col-md-4'
          = f.text_field :username, class: 'col-md-8'

        .form-group
          = f.label :password, class: 'col-md-4'
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, class: 'col-md-8', autocomplete: 'off'

        .form-group
          = f.label :password_confirmation, class: 'col-md-4'
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password_confirmation, class: 'col-md-8', autocomplete: 'off'

        .form-group
          .col-md-offset-2.col-md-8.text-center
            = f.submit 'Register', class: 'btn btn-primary btn-lg'